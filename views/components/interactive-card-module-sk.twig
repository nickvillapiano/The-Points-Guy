    <div class="toggle-results">
    {# testing? use this below #}
    {# <div class="toggle-results show"> #}
      {% autoescape false %}
      {% for card in cards %}
      <div id="card-{{ loop.index }}" class="fpo-result-card hide">
        {# testing? use this below #}
        {# <div id="card-{{ loop.index }}" class="fpo-result-card {% if loop.index == 1 or loop.index == 2 or loop.index == 3 %}show{% else %}hide{% endif %}"> #}

        {# <div class="card-header"> #}
          <div class="card">
            <img src="images/cards/{{ card.card_image }}" alt="{{ card.image_alt }}">
          </div>
          <div class="rubric-title">{{ card.title }}</div>
        {# </div> #}
        <div class="card-stats">
          <div class="valuation">
            <div class="rubric-title">TPG POINTS VALUATION</div>
            <div class="value{% if card.point_valuation_best %} best{% endif %}">{{ card.point_valuation }}</div>
          </div>
          <div class="bonus">
            <div class="rubric-title">SIGN-UP BONUS</div>
            <div class="value{% if card.sign_up_bonus_best %} best{% endif %}">{{ card.sign_up_bonus }}</div>
            <div class="extra">{{ card.sign_up_bonus_extra }}</div>
          </div>
          <div class="fee">
            <div class="rubric-title">ANNUAL FEE</div>
            <div class="value{% if card.annual_fee_best %} best{% endif %}">{{ card.annual_fee }}</div>
            <div class="extra">{{ card.annual_fee_extra }}</div>
          </div>
        </div>
        <hr>
        <div class="card-info-actions">
          <div class="headline">
            {{ card.headline }}
          </div>
          {# <button class="apply"><a href="{{ card.url }}">Apply at {{ card.url_label }}</a></button> #}
          <button class="apply">Apply at {{ card.url_label }}</button>
          {% include 'components/i-have-this-card.twig' %}
        </div>
      </div>
      {% endfor %}
      {% endautoescape %}

    </div>{# end toggle-results #}

    {% include 'components/more-link.twig' with
      {
        linkTarget: "#",
        linkText: "See the complete tpg guide to cards"
      }
    %}

  </div>
</section>
