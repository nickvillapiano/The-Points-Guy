    <div class="spend-toggle-dropdowns">

      {% include 'components/select.twig' with
        {
          id: 'airlines',
          class: 'hide-opacity remove',
          options: ['Any Airline, I\'m Flexible', 'American', 'Delta', 'Southwest']
        }
      %}

      {% include 'components/select.twig' with
        {
          id: 'perks',
          class: 'hide-opacity remove',
          options: ['All Perks, I\'m Flexible', 'Lounge', 'Elite', 'Hotels']
        }
      %}

